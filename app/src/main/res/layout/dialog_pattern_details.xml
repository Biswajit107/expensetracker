<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pattern Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pattern Characteristics"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Merchant Pattern -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merchant Pattern:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/merchantPatternText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Description Pattern -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Pattern:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/descriptionPatternText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Amount Range -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Range:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/amountRangeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Transaction Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Type:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/transactionTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Created Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created Date:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/createdDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Match Count -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-excluded Transactions:"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/matchCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Affected Transactions Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affected Transactions"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/noAffectedTransactionsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No transactions have been auto-excluded by this pattern yet."
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:padding="16dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/affectedTransactionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>